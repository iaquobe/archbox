### Settings from original zathurarc ###
set font "monospace normal 16"
set statusbar-basename true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#b8b6b3'
set completion-bg '#010101'

# Command line completion group elements
set completion-group-fg '#4F4E4A'
set completion-group-bg '#010101'

# Current command line completion element
set completion-highlight-fg '#010101'
set completion-highlight-bg '#b8b6b3'

# Default foreground/background color
set default-bg rgba(1,1,1,0.9)

# Input bar
set inputbar-fg '#b8b6b3'
set inputbar-bg '#010101'

# Notification
set notification-fg '#b8b6b3'
set notification-bg '#010101'

# Error notification
set notification-error-fg '#b8b6b3'
set notification-error-bg '#42413E'

# Warning notification
set notification-warning-fg '#b8b6b3'
set notification-warning-bg '#42413E'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#b8b6b3'
set statusbar-bg '#010101'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#4F4E4A'
set highlight-active-color '#4F4E4A'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#b8b6b3'

# 'Loading...' text
set render-loading-fg '#b8b6b3'
set render-loading-bg '#010101'

# Index mode
set index-fg '#b8b6b3'
set index-bg '#010101'

# Selected element in index mode
set index-active-fg '#010101'
set index-active-bg '#b8b6b3'