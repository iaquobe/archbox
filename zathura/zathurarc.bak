### Settings from original zathurarc ###
set font "monospace normal 16"
set statusbar-basename true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d59fd5'
set completion-bg '#110918'

# Command line completion group elements
set completion-group-fg '#AB8C7A'
set completion-group-bg '#110918'

# Current command line completion element
set completion-highlight-fg '#110918'
set completion-highlight-bg '#d59fd5'

# Default foreground/background color
set default-bg rgba(17,9,24,0.9)

# Input bar
set inputbar-fg '#d59fd5'
set inputbar-bg '#110918'

# Notification
set notification-fg '#d59fd5'
set notification-bg '#110918'

# Error notification
set notification-error-fg '#d59fd5'
set notification-error-bg '#A04E62'

# Warning notification
set notification-warning-fg '#d59fd5'
set notification-warning-bg '#A04E62'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#d59fd5'
set statusbar-bg '#110918'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#AB8C7A'
set highlight-active-color '#AB8C7A'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d59fd5'

# 'Loading...' text
set render-loading-fg '#d59fd5'
set render-loading-bg '#110918'

# Index mode
set index-fg '#d59fd5'
set index-bg '#110918'

# Selected element in index mode
set index-active-fg '#110918'
set index-active-bg '#d59fd5'