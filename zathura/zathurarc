### Settings from original zathurarc ###
set font "monospace normal 16"
set statusbar-basename true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#a3c7bd'
set completion-bg '#0F1319'

# Command line completion group elements
set completion-group-fg '#CE6537'
set completion-group-bg '#0F1319'

# Current command line completion element
set completion-highlight-fg '#0F1319'
set completion-highlight-bg '#a3c7bd'

# Default foreground/background color
set default-bg rgba(15,19,25,0.9)

# Input bar
set inputbar-fg '#a3c7bd'
set inputbar-bg '#0F1319'

# Notification
set notification-fg '#a3c7bd'
set notification-bg '#0F1319'

# Error notification
set notification-error-fg '#a3c7bd'
set notification-error-bg '#B04B34'

# Warning notification
set notification-warning-fg '#a3c7bd'
set notification-warning-bg '#B04B34'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#a3c7bd'
set statusbar-bg '#0F1319'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#CE6537'
set highlight-active-color '#CE6537'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#a3c7bd'

# 'Loading...' text
set render-loading-fg '#a3c7bd'
set render-loading-bg '#0F1319'

# Index mode
set index-fg '#a3c7bd'
set index-bg '#0F1319'

# Selected element in index mode
set index-active-fg '#0F1319'
set index-active-bg '#a3c7bd'