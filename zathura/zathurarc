### Settings from original zathurarc ###
set font "monospace normal 16"
set statusbar-basename true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#e88cc6'
set completion-bg '#010205'

# Command line completion group elements
set completion-group-fg '#B73F68'
set completion-group-bg '#010205'

# Current command line completion element
set completion-highlight-fg '#010205'
set completion-highlight-bg '#e88cc6'

# Default foreground/background color
set default-bg rgba(1,2,5,0.9)

# Input bar
set inputbar-fg '#e88cc6'
set inputbar-bg '#010205'

# Notification
set notification-fg '#e88cc6'
set notification-bg '#010205'

# Error notification
set notification-error-fg '#e88cc6'
set notification-error-bg '#611A64'

# Warning notification
set notification-warning-fg '#e88cc6'
set notification-warning-bg '#611A64'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#e88cc6'
set statusbar-bg '#010205'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#B73F68'
set highlight-active-color '#B73F68'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#e88cc6'

# 'Loading...' text
set render-loading-fg '#e88cc6'
set render-loading-bg '#010205'

# Index mode
set index-fg '#e88cc6'
set index-bg '#010205'

# Selected element in index mode
set index-active-fg '#010205'
set index-active-bg '#e88cc6'