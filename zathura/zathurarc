### Settings from original zathurarc ###
set font "monospace normal 16"
set statusbar-basename true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#ade5d8'
set completion-bg '#090b19'

# Command line completion group elements
set completion-group-fg '#A262A4'
set completion-group-bg '#090b19'

# Current command line completion element
set completion-highlight-fg '#090b19'
set completion-highlight-bg '#ade5d8'

# Default foreground/background color
set default-bg rgba(9,11,25,0.9)

# Input bar
set inputbar-fg '#ade5d8'
set inputbar-bg '#090b19'

# Notification
set notification-fg '#ade5d8'
set notification-bg '#090b19'

# Error notification
set notification-error-fg '#ade5d8'
set notification-error-bg '#5D6095'

# Warning notification
set notification-warning-fg '#ade5d8'
set notification-warning-bg '#5D6095'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#ade5d8'
set statusbar-bg '#090b19'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#A262A4'
set highlight-active-color '#A262A4'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#ade5d8'

# 'Loading...' text
set render-loading-fg '#ade5d8'
set render-loading-bg '#090b19'

# Index mode
set index-fg '#ade5d8'
set index-bg '#090b19'

# Selected element in index mode
set index-active-fg '#090b19'
set index-active-bg '#ade5d8'